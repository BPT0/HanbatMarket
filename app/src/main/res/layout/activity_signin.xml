<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".signin.SigninActivity">

    <data>
        <variable
            name="signinViewModel"
            type="com.hanbat.hanbatmarket.signin.SigninViewModel" />
    </data>

    <ScrollView
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:background="@color/backgroundColor">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:padding="0dp"
                android:src="@drawable/icon_arrow_back"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="뒤로가기 버튼"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 가입"
                android:textColor="#2A2A2A"
                android:textSize="20sp"
                android:fontFamily="@font/notosanskr_regular"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_descript1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_title1"
                app:layout_constraintStart_toStartOf="parent"
                android:text="회원이 되시면 많은 기능을 이용할 수 있어요!"
                android:textColor="@color/foundation_gray_Lighter"
                android:textSize="14sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nick_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_descript1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="64dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="먼저 사용할 닉네임을 입력해주세요."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etx_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etx_bg_round_30dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:hint="닉네임 (1~6글자)"
                android:textColorHint="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/tv_nick_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nick_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etx_nick"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="닉네임은 1글자에서 6글자 사이여야 합니다"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_email_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_nick_err"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="먼저 사용할 닉네임을 입력해주세요."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etx_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etx_bg_round_30dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:hint="이메일 주소"
                android:textColorHint="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/tv_email_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_email_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etx_email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="이메일 주소의 형식이 맞지 않습니다."
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거의 다 왔어요!"
                android:textColor="#2A2A2A"
                android:textSize="20sp"
                android:fontFamily="@font/notosanskr_regular"
                android:textStyle="bold"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/etx_email"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_descript2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_title2"
                app:layout_constraintStart_toStartOf="parent"
                android:text="마지막 단계예요."
                android:textColor="@color/foundation_gray_Lighter"
                android:textSize="14sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pw_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_descript2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="비밀번호를 입력해주세요."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etx_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etx_bg_round_30dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:hint="닉네임 (1~6글자)"
                android:textColorHint="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/tv_pw_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pw_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etx_pw"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="비밀번호는 8자 이상이여야 합니다."
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pw_chk_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etx_pw"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="64dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="비밀번호를 한 번 더 확인해주세요."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etx_pw_chk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etx_bg_round_30dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:hint="비밀번호"
                android:textColorHint="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/tv_pw_chk_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pw_chk_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etx_pw_chk"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:padding="0dp"
                android:includeFontPadding="false"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskr_regular"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="가입하기 버튼"
                android:background="@drawable/btn_bg_round_30dp"
                android:layout_marginTop="128dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="가입하기"
                app:layout_constraintTop_toBottomOf="@id/tv_pw_chk_err"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

<!--            android:onClick="@{() -> signinViewModel.onSigninClicked()}"-->

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</layout>